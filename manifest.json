{
    "manifest_version": 2,
    "author": "Camila L. Oliveira",
    "version": "0.0.2",
    "name": "Hello",
    "description": "Build an Extension!",
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "content_scripts": {
      "js": ["scripts/content.js"]
    },
    "permissions": ["storage"],  
    "browser_action": {    
        "default_icon": "icon.png",    
        "default_popup": "./src/extension/popup.html"  
    }
}